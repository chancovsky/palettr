{
  "name": "palettr",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "dependencies": {
    "@emotion/core": "^10.0.5",
    "@emotion/styled": "^10.0.6",
    "@types/jest": "23.3.12",
    "@types/node": "10.12.18",
    "@types/react": "16.7.18",
    "@types/react-dom": "16.0.11",
    "electron-is-dev": "^1.0.1",
    "electron-json-storage": "^4.1.5",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-pose": "^4.0.4",
    "react-scripts": "2.1.3",
    "typescript": "3.2.2"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "electron": "^3.0.4",
    "electron-builder": "^20.18.0",
    "electron-devtools-installer": "^2.2.4"
  },
  "scripts": {
    "start": "concurrently \"yarn web\" \"wait-on http://localhost:3000 && electron .\"",
    "web": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "pack": "electron-builder --dir",
    "dist": "PUBLIC_URL=./ react-scripts build && electron-builder --mac --linux --win -p always",
    "package": "yarn build && electron-builder build --publish never"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "build": {
    "appId": "com.chancovsky.palettr",
    "compression": "normal",
    "productName": "Palettr",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "type": "distribution",
      "target": [
        "pkg",
        "dmg",
        "mas"
      ],
      "publish": {
        "provider": "github",
        "repo": "chancovsky/palettr",
        "owner": "chancovsky"
      },
      "category": "public.app-category.news"
    },
    "mas": {
      "entitlements": "assets/entitlements.mas.plist",
      "entitlementsInherit": "assets/entitlements.mas.inherit.plist",
      "provisioningProfile": "assets/embedded.provisionprofile"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "publish": {
        "provider": "s3",
        "bucket": "example-releases",
        "path": "releases"
      }
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "snap",
        "AppImage"
      ],
      "description": "Example",
      "category": "Network;Feed",
      "publish": {
        "provider": "s3",
        "bucket": "example-releases",
        "path": "releases"
      }
    }
  }
}
